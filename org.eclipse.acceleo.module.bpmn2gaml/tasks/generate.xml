<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="irit.crizinnov.transformation.bpmn4gama2gaml">
    <property name="ECLIPSE_HOME" value="../../../../../../../../Program Files (x86)/eclipse/modeling-tools/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../../../workspace eclipse"/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="irit.crizinnov.transformation.bpmn4gama2gaml.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/irit.crizinnov.transformation.bpmn4gama2gaml/bin"/>
    </path>

    <path id="irit.crizinnov.transformation.bpmn4gama2gaml.classpath">
        <path refid="irit.crizinnov.transformation.bpmn4gama2gaml.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="irit.crizinnov.transformation.bpmn4gama2gaml.libraryclasspath.alljars">
        <pathelement location="../irit.crizinnov.transformation.bpmn4gama2gaml/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="irit.crizinnov.transformation.bpmn4gama2gaml.classpath.alljars">
        <path refid="irit.crizinnov.transformation.bpmn4gama2gaml.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="irit.crizinnov.transformation.bpmn4gama2gaml.main.Generate" classpathref="irit.crizinnov.transformation.bpmn4gama2gaml.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="irit.crizinnov.transformation.bpmn4gama2gaml.main.Generate" classpathref="irit.crizinnov.transformation.bpmn4gama2gaml.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
